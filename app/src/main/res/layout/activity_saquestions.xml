<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_saquestions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.saverchenko.cellandmolecularbiologyqa.SAQuestionsActivity">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:id="@+id/saQuestionView" />

    <Button
        android:text="@string/saShowAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/button4"
        android:onClick="onShowAnswerClick"
        android:layout_marginBottom="0dp"
        android:keepScreenOn="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:text="@string/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onNextClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/saAnswerView"
        android:layout_below="@+id/saQuestionView"
        android:layout_alignLeft="@+id/saQuestionView"
        android:layout_alignStart="@+id/saQuestionView"
        android:layout_marginTop="17dp" />
</RelativeLayout>
